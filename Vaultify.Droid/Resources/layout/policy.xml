<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/navheaderbg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/policy_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/goback"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:gravity="center"
                android:textColor="@color/vaultify_colorOnPrimary"
                style="@style/TextAppearance.Vaultify.Headline3"
                android:layout_marginTop="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Policy"
                android:gravity="center"
                android:textColor="@color/vaultify_colorOnPrimary"
                style="@style/TextAppearance.Vaultify.Headline3"
                android:layout_marginTop="110dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/vaultify_colorOnPrimary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="14dp"
                android:layout_gravity="fill_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“We respect and value your privacy”"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Vaultify.Headline6"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/third"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fifth"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sixth"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_one"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_two"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_three"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_four"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_five"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_six"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_how"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analytics_paragraph"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_paragraph"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_paragraph"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_email"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_date"
                    android:textColor="@color/vaultify_colorOnSecondary"
                    style="@style/TextAppearance.Vaultify.Body1"
                    android:layout_marginTop="20dp"/>
            
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
