<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#121212">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:clickable="true"
                android:id="@+id/feedgoback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/goback"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:gravity="center_vertical"
                style="@style/TextAppearance.Vaultify.Headline5"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="3dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="32dp"
        android:background="@drawable/container"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            style="@style/TextAppearance.Vaultify.Headline4"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/vaultify_colorOnPrimary"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            style="@style/TextAppearance.Vaultify.Body1"
            android:textStyle="bold"
            android:textColor="@color/vaultify_colorOnPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="?android:attr/colorPrimary"
            android:textColorHint="#bec1d4"
            android:textColor="@color/vaultify_colorOnSecondary"
            android:inputType="text"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:"
            style="@style/TextAppearance.Vaultify.Body1"
            android:textStyle="bold"
            android:textColor="@color/vaultify_colorOnPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="?android:attr/colorPrimary"
            android:textColorHint="#bec1d4"
            android:textColor="@color/vaultify_colorOnSecondary"
            android:inputType="text"
            android:hint="Type here..."
            android:id="@+id/messagebox"
            android:paddingBottom="200dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsendfeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Vaultify.Button"
            android:textColor="@color/vaultify_colorOnSecondary"
            android:text="Send Feedback"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</LinearLayout>