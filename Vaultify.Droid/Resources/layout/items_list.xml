<?xml version="1.0" encoding="utf-8"?>
<!--LinearLayout orientation horizontal -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/vaultify_colorBackground"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/vaultify_colorBackground"
            >

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="logo container" />

            <TextView
                android:id="@+id/textView_logoname"
                android:layout_toRightOf="@id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vaultify_colorOnBackground"
                android:textSize="20sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/textView_preview"
                android:layout_below="@id/textView_logoname"
                android:layout_alignStart="@id/textView_logoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#99ffffff"
                android:textSize="16sp"
                tools:text="Email" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
